<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_whitespace">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/card_whitespace"
                android:textAppearance="?attr/headingTextAppearance"
                android:textColor="?attr/colorAccent" />

            <TextView
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/card_whitespace"
                android:text="@string/dummy_time"
                android:textAppearance="?attr/normalTextAppearance" />

        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_whitespace"
            android:paddingRight="@dimen/card_whitespace"
            android:textAppearance="?attr/normalTextAppearance" />

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/likes"
                style="@style/TintedBorderlessButton"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_thumb_up" />

            <ImageButton
                android:id="@+id/button_share"
                style="@style/TintedBorderlessButton"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="?attr/themedShareDrawable" />

            <ImageButton
                android:id="@+id/button_replies"
                style="@style/TintedBorderlessButton"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_comment" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>